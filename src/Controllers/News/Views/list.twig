{% extends "layout.twig" %}
{% block content %}
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="post-preview">
    {% for news in news %}
    <a href="news/{{ news.id }}">
        <h2 class="post-title">{{ news.titre }}</h2>
        <h3 class="post-subtitle">{{ news.chapo }}</h3>
    </a>
     <p class="post-meta">Posted by
            <a href="#">{{ news.auteur }}</a>
            on September 24, 2019</p>
    {% endfor %}
            </div>
        </div>
        </div>
    </div>
{% endblock %}