{% extends "layout.twig" %}
{% block content %}
<section class="home-title-area">
		<div class="container">
			<h3 class="text-heading title_color">Les 5 derniers articles</h3>
		</div>
	</section>
<section class="home_area">
        <div class="container">
            <div class="row">
                <div class="col-lg-11">
                    <div class="blog_left_sidebar">
                    {% for news in news %}
                        <article class="row blog_item">
                            <div class="col-md-3">
                                <div class="blog_info text-right">
                                    <ul class="blog_meta list">
                                        <li><a href="#">{{ news.login|e }}<i class="lnr lnr-user"></i></a></li>
                                        <li><a href="#">le {{ news.dateAjout|date("d/m/Y Ã  H\\hi") }}<i class="lnr lnr-calendar-full"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="col-md-9">
                                <div class="blog_post">
                                    <div class="blog_details">
                                        <a href="news/{{ news.id }}">
                                            <h2>{{ news.titre|e }}</h2>
                                        </a>
                                        <p>{{ news.chapo|e }}</p>
                                        <a href="news/{{ news.id }}" class="primary_btn">Lire la suite</a>
                                    </div>
                                </div>
                            </div>
                        </article>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>
    {% include 'contactForm.twig' %}
{% endblock %}
