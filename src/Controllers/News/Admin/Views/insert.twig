{% extends "layout.twig" %}
{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="overview-wrap">
                <h2 class="title-1">{{ title }}</h2>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">Article</div>
                <div class="card-body">
                    <form action="{{ basePath }}/admin/addNews" method="post" novalidate="novalidate">
                        <div class="row form-group">
                            <div class="col col-md-3">
                                <label class=" form-control-label" for="titre">Titre</label>
                            </div>
                            <div class="col-12 col-md-9">
                                <input class="form-control" id="titre" name="titre" placeholder="Votre titre" type="text">
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col col-md-3">
                                <label class=" form-control-label" for="chapo">Ch√¢po</label>
                            </div>
                            <div class="col-12 col-md-9">
                                <textarea class="form-control" id="chapo" name="chapo" placeholder="Content..." rows="3"></textarea>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col col-md-3">
                                <label class=" form-control-label" for="contenu">Contenu</label>
                            </div>
                            <div class="col-12 col-md-9">
                                <textarea class="form-control" id="contenu" name="contenu" placeholder="Content..." rows="9"></textarea>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col col-md-3">
                                <label class=" form-control-label" for="select">Auteur</label>
                            </div>
                            <div class="col-12 col-md-9">
                                <select class="form-control" id="idUser" name="idUser">
                                    {% for user in users %}
                                        <option value="{{ user.id }}">{{ user.login|e }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div>
                            <button class="btn btn-lg btn-info btn-block" id="payment-button" type="submit">Ajouter</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}